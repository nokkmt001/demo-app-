<?xml version="1.0" encoding="utf-8"?>
<resources>
  <declare-styleable name="RoundedImageView">
    <attr name="riv_corner_radius" format="dimension" />
    <attr name="riv_corner_radius_top_left" format="dimension" />
    <attr name="riv_corner_radius_top_right" format="dimension" />
    <attr name="riv_corner_radius_bottom_left" format="dimension" />
    <attr name="riv_corner_radius_bottom_right" format="dimension" />
    <attr name="riv_border_width" format="dimension" />
    <attr name="riv_border_color" format="color" />
    <attr name="riv_mutate_background" format="boolean" />
    <attr name="riv_oval" format="boolean" />
    <attr name="android:scaleType" />
    <attr name="riv_tile_mode">
      <enum name="clamp" value="0" />
      <enum name="repeat" value="1" />
      <enum name="mirror" value="2" />
    </attr>
    <attr name="riv_tile_mode_x">
      <enum name="clamp" value="0" />
      <enum name="repeat" value="1" />
      <enum name="mirror" value="2" />
    </attr>
    <attr name="riv_tile_mode_y">
      <enum name="clamp" value="0" />
      <enum name="repeat" value="1" />
      <enum name="mirror" value="2" />
    </attr>
  </declare-styleable>

  <declare-styleable name="IconButtonPlaceHolder">
    <attr name="itemPlaceHolder" format="string" />
    <attr name="itemHintPlaceHolder" format="string" />
    <attr name="itemShowArrow" format="boolean" />
    <attr name="itemShowPlush" format="boolean" />
    <attr name="itemFocus" format="boolean" />
    <attr name="itemObligatory" format="boolean" />
    <attr name="itemTypeInputText" format="boolean" />
    <attr name="itemNotFocusContent" format="boolean"/>
    <attr name="itemTypeInputPhone" format="boolean"/>
    <attr name="itemMaxLength" format="integer"/>
  </declare-styleable>

  <declare-styleable name="ItemView">
    <attr name="itemText" format="string" />
    <attr name="itemIcon" format="reference" />
    <attr name="itemBottomLine" format="boolean" />
    <attr name="itemIconRight" format="boolean" />
    <attr name="itemPaddingTop" format="dimension" />
    <attr name="itemPaddingBottom" format="dimension" />
    <attr name="itemPaddingRight" format="dimension" />
    <attr name="itemPaddingLeft" format="dimension" />
  </declare-styleable>

  <declare-styleable name="SettingView">
    <attr name="drawableStart" format="reference"/>
    <attr name="drawableEnd" format="reference"/>
    <attr name="isShowLanguage" format="boolean" />
    <attr name="label" format="string"/>
    <attr name="detail" format="string"/>
    <attr name="detailVersion" format="string"/>
  </declare-styleable>

  <declare-styleable name="darkMode">
    <attr name="backgroundColorBelow" format="color"/>
    <attr name="backgroundColorAbove" format="color"/>
    <attr name="backgroundBlackAbove" format="color"/>
    <attr name="textColor" format="color"/>
    <attr name="buttonColor" format="color"/>
    <attr name="backgroundDrawer" format="integer"/>
    <attr name="backgroundDrawerRadius" format="integer"/>
    <attr name="backgroundButton" format="integer"/>
    <attr name="drawerInforPerson" format="integer"/>
    <attr name="drawerInforCompany" format="integer"/>
  </declare-styleable>

</resources>
